<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="easyweb.easywebservice.domain.Product.repository.ProductMapper">
    <select id="findProduct" parameterType="HashMap" resultType="easyweb.easywebservice.domain.Product.dto.ProductInfoDto">
        SELECT p.product_id, p.name, p.price, p.manufacturer, p.image_path
        FROM product p
        JOIN category c on p.category_id = c.category_id

        WHERE p.status = #{status}
        <if test="category != null">
            AND c.name = #{category}
        </if>
        <choose>
            <when test="like == null">
                <choose>
                    <when test="asc == null">
                        ORDER BY p.price DESC
                    </when>
                    <otherwise>
                        ORDER BY p.price ASC
                    </otherwise>
                </choose>
            </when>
            <otherwise>

            </otherwise>
        </choose>
        <choose>
            <when test="pageSize != null and offset != null">
                LIMIT ${pageSize}
                OFFSET ${offset}
            </when>
            <when test="pageSize == null and offset != null">
                LIMIT 20
                OFFSET ${offset}
            </when>
            <when test="pageSize != null and offset == null">
                LIMIT ${pageSize}
            </when>
            <otherwise>
                LIMIT 20
            </otherwise>
        </choose>
    </select>
    <select id="countQueryForProduct" parameterType="HashMap" resultType="Long">
        SELECT p.product_id FROM product p WHERE p.status = #{status} ORDER BY p.price DESC
    </select>
</mapper>